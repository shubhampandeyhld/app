{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" },
   { "npm" : "lwc-recipes-oss-ui-components"}

]
    
},
    
    "routes": [
        {
            "id": "Home",
            "path": "/",
            "contentTemplate": "$contentDir/home.md",
            "layoutTemplate": "$layoutsDir/main_layout.njk"
        },
        {
            "id": "About",
            "path": "/about",
            "contentTemplate": "$contentDir/about.md",
            "layoutTemplate": "$layoutsDir/main_layout.njk"
        },
        {
            "id": "test",
            "path": "/explore",
            "contentTemplate": "$contentDir/explore.html",
            "layoutTemplate": "$layoutsDir/main_layout.njk",
            "properties": {
                "prop1": "This is the value for prop1"
            }
        }
    ],

    "errorRoutes":  [
       { "id": "not_found",
       "status": 404,
       "contentTemplate":"$contentDir/404.md"
    }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/public/assets"
        },
        {
            "alias": "favicon",
            "file": "$rootDir/src/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ]
}
